{
    "manifestVersion": 1,
    "id": "build-release-task",
    "name": "DataAttest Build and Release Tool",
    "version": "0.0.4",
    "publisher": "PicoDataAttest",
    "public": true,
    "galleryFlags": [
        "Preview"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for building/releasing with PicoDataAttest. Includes one build/release task.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/logo.png"        
    },
    "files": [
        {
            "path": "buildAndReleaseTask"
        }
    ],
    "contributions": [
        {
            "id": "custom-build-release-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildAndReleaseTask"
            }
        }
    ]
}